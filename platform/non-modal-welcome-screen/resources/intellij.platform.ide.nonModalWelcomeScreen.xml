<idea-plugin package="com.intellij.platform.ide.nonModalWelcomeScreen">
  <dependencies>
    <module name="intellij.platform.compose"/>
    <module name="intellij.platform.jewel.markdown.ideLafBridgeStyling"/>
  </dependencies>
  <resource-bundle>messages.NonModalWelcomeScreenBundle</resource-bundle>

  <extensionPoints>
    <extensionPoint qualifiedName="com.goide.welcomeScreenFeatureProvider"
                    interface="com.intellij.platform.ide.nonModalWelcomeScreen.rightTab.GoWelcomeScreenFeatureProvider" dynamic="true"/>
    <extensionPoint qualifiedName="com.goide.templateOptionProvider"
                    interface="com.intellij.platform.ide.nonModalWelcomeScreen.leftPanel.GoWelcomeScreenFileTemplateOptionProvider" dynamic="true"/>
    <extensionPoint qualifiedName="com.goide.welcomeScreenFileIconProvider"
                    interface="com.intellij.platform.ide.nonModalWelcomeScreen.leftPanel.GoWelcomeScreenFileIconProvider" dynamic="true"/>
    <extensionPoint qualifiedName="com.goide.welcomeScreenRightTabBannerProvider"
                    interface="com.intellij.platform.ide.nonModalWelcomeScreen.rightTab.GoWelcomeRightTabBannerProvider" dynamic="true"/>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij">
    <actionConfigurationCustomizer implementation="com.intellij.platform.ide.nonModalWelcomeScreen.actions.GoWelcomeScreenAwareActionsCustomizer" />

    <fileEditorProvider id="settingsWindow" implementation="com.intellij.platform.ide.nonModalWelcomeScreen.rightTab.GoWelcomeRightTabVirtualFileEditorProvider"/>
    <projectViewPane implementation="com.intellij.platform.ide.nonModalWelcomeScreen.leftPanel.GoWelcomeLeftPanel"/>

    <applicationService serviceImplementation="com.intellij.platform.ide.nonModalWelcomeScreen.GoWelcomeScreenRecentProjectsManager"
                        serviceInterface="com.intellij.ide.RecentProjectsManager"
                        overrides="true"/>
  </extensions>
</idea-plugin>
