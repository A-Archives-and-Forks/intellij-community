<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <dependencies>
        <module name="intellij.platform.frontend.split"/>
        <module name="intellij.toml.core"/>
    </dependencies>

    <extensions defaultExtensionNs="com.intellij">
        <rdclient.editorActionHandlerStrategyCustomizer implementation="com.intellij.toml.frontend.split.TomlFrontendEditorActionCustomizer"/>
        <rdclient.highlighterSuppressionHandler implementation="com.intellij.toml.frontend.split.TomlFrontendHighlightingSuppressor"/>

        <rdclient.actionCustomization backend="remote" actionId="CommentByBlockComment"
                                      implementationClass="com.intellij.toml.frontend.split.TomlDelegatingActionCustomization" order="first"/>
        <rdclient.actionCustomization backend="remote" actionId="CommentByLineComment"
                                      implementationClass="com.intellij.toml.frontend.split.TomlDelegatingActionCustomization" order="first"/>
    </extensions>
</idea-plugin>