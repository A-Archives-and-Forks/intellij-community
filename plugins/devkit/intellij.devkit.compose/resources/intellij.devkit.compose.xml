<idea-plugin>
  <dependencies>
    <module name="intellij.platform.compose"/>
  </dependencies>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <resource-bundle>messages.DevkitComposeBundle</resource-bundle>

  <actions>
    <group id="ComposeToolsGroup" searchable="false">
      <action id="ComposeShowcaseAction" class="com.intellij.devkit.compose.showcase.ComposeShowcaseAction"/>
      <action id="ComposePerformanceDemoAction" class="com.intellij.devkit.compose.showcase.ComposePerformanceDemoAction"/>
      <separator/>

      <add-to-group group-id="ToolsMenu" relative-to-action="Dev.PsiViewerActions" anchor="after"/>
    </group>
  </actions>
</idea-plugin>
